<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="#242529"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/closeIB"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="?attr/colorControlHighlight"
                android:src="@drawable/ic_close_24"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingVertical="8dp"
                android:text="@string/search_bar_filters"
                android:textAppearance="@style/TextAppearance.Ticketing.Title2"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeListTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/search_transfers"
            android:textAppearance="@style/TextAppearance.Ticketing.Title3"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#242529"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="92dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="@string/filter_no_transfers"
                android:textAppearance="@style/TextAppearance.Ticketing.Text1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/noTransfersSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                tools:checked="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#242529"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="@string/filter_with_luggage"
                android:textAppearance="@style/TextAppearance.Ticketing.Text1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/withLuggageSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                tools:checked="true" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/applyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="@drawable/rounded_button_8_green"
            android:paddingVertical="10dp"
            android:text="@string/filter_apply"
            android:textAppearance="@style/TextAppearance.Ticketing.ButtonText1_Italic"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>
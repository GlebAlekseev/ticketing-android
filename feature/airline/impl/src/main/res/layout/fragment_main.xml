<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="21dp"
            android:gravity="center"
            android:text="@string/search_ticket_template"
            android:textAppearance="@style/TextAppearance.Ticketing.Title1"
            android:textColor="#D9D9D9" />

        <include
            android:id="@+id/searchPanel"
            layout="@layout/search_panel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" />

        <include
            android:id="@+id/offersSection"
            layout="@layout/offers_section" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/rounded_button_8_grey"
            android:paddingVertical="10dp"
            android:text="@string/menu_all_destinations"
            android:textAppearance="@style/TextAppearance.Ticketing.ButtonText1_Italic"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/timeListTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:alpha="0.3"
            android:text="@string/menu_first_time"
            android:textAppearance="@style/TextAppearance.Ticketing.Title1"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>

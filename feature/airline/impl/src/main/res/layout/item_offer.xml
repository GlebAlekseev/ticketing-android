<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="132dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bannerIV"
        android:background="#ffffff"
        android:layout_width="132dp"
        android:layout_height="132dp" />

    <TextView
        android:id="@+id/titleTV"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Ticketing.Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:layout_marginVertical="8dp"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/townTV"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Ticketing.Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Будапешт" />


    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/priceIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:tint="@color/grey_6"
            android:src="@drawable/ic_airfares_24" />

        <TextView
            android:id="@+id/priceTV"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Ticketing.Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/priceIcon"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="от 22 264 ₽" />
    </RelativeLayout>
</LinearLayout>
<resources>
    <style name="Base.Theme.Ticketing" parent="Theme.Material3.DayNight.NoActionBar"/>

    <style name="Theme.Ticketing" parent="Base.Theme.Ticketing" >
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="switchStyle">@style/Style.Ticketing.Switch</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Ticketing.TabText</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Ticketing.TabText</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnSurface">@color/grey_6</item>
    </style>
</resources>